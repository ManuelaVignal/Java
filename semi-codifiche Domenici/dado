 end while

  if (ris>ris2) stampo ha vinto il giocatore 1

    else  ha vinto il giocatore 2

  end if

//banco con i soldi con un solo giocatore


soldi=leggi input;

int ris1 =0;
int ris2 =0;



 while (soldi>0) do

  db = banco lancia il dado (numero casuale)
  

  dg = giocatore lancia il dado (numero casuale)

	stampa dg e db
  
  

    if  (dg>db) then
   
      	soldi++;
	stampa mano vinta dal giocatore.
	
    else

        soldi --;
	stampa mano vinta dal banco
 end while

  
